@model Carrito_B.Models.Compra

@{
    ViewData["Title"] = "Gracias por su compra";
}

<div class="container">
    <div class="alert alert-success mt-3">
        <h4 class="alert-heading">¡Gracias por su compra!</h4>
        <p>Su código de compra es: <strong>@Model.Id</strong></p>
        <p>Fecha: @Model.Fecha.ToString("g")</p>
        <p>Total: <strong>@Model.Total.ToString("C")</strong></p>
    </div>

    <h5>Sucursal seleccionada</h5>
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Sucursal?.Nombre</dd>

        <dt class="col-sm-3">Dirección</dt>
        <dd class="col-sm-9">@Model.Sucursal?.Direccion</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Sucursal?.Telefono</dd>
    </dl>

    <h5>Detalle de ítems</h5>

    @if (Model.Carrito?.CarritoItems == null || !Model.Carrito.CarritoItems.Any())
    {
        <div class="alert alert-info">No se encontraron ítems para esta compra.</div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th class="text-end">Cantidad</th>
                    <th class="text-end">Precio unitario</th>
                    <th class="text-end">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Carrito.CarritoItems)
                {
                    <tr>
                        <td>@item.Producto?.Nombre</td>
                        <td class="text-end">@item.Cantidad</td>
                        <td class="text-end">@item.ValorUnitario.ToString("C")</td>
                        <td class="text-end">@((item.Cantidad * item.ValorUnitario).ToString("C"))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Total</th>
                    <th class="text-end">@Model.Total.ToString("C")</th>
                </tr>
            </tfoot>
        </table>
    }

    <div class="mb-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
        <a asp-controller="Clientes" asp-action="Historial" class="btn btn-secondary">Ver compras</a>
    </div>
</div>