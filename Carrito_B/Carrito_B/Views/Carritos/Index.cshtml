@using Carrito_B.Helpers
@model IEnumerable<Carrito_B.Models.Carrito>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Apellido)
            </td>
            <td>
               
                @if (item.Activo)
                {
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    
                        @if (User.IsInRole(Configs.CLIENTE_ROLE)){
                    <form asp-action="Vaciar" asp-controller="Carritos" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Vaciar carrito</button>
                    </form>
                        }
                }
                else
                {
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
