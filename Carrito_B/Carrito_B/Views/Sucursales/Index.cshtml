@using Carrito_B.Helpers
@model IEnumerable<Carrito_B.Models.Sucursal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (TempData["DeleteError"] != null)
{
    <div class="alert alert-danger" role="alert">@TempData["DeleteError"]</div>
}
@if (TempData["DeleteSuccess"] != null)
{
    <div class="alert alert-success" role="alert">@TempData["DeleteSuccess"]</div>
}

@if (User.IsInRole(Configs.ADMIN_ROLE) || User.IsInRole(Configs.EMPLEADO_ROLE))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @if (User.IsInRole(Configs.ADMIN_ROLE) || User.IsInRole(Configs.EMPLEADO_ROLE))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Activa)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                @if (User.IsInRole(Configs.ADMIN_ROLE) || User.IsInRole(Configs.EMPLEADO_ROLE))
                {
                    <td>@Html.DisplayFor(modelItem => item.Activa)</td>
                }
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>
                    @if (User.IsInRole(Configs.ADMIN_ROLE) || User.IsInRole(Configs.EMPLEADO_ROLE))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        @: |

                        <a asp-controller="StockItems"
                           asp-action="Index"
                           asp-route-sucursalId="@item.Id">
                            Ver inventario
                        </a>
                        @: |

                        <a asp-action="Delete" asp-route-id="@item.Id">Deshabilitar</a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>