@model IEnumerable<Carrito_B.Models.StockItem>
@using Carrito_B.Helpers
@using System.Linq

@{
    ViewData["Title"] = "Inventario";
    int? sucursalId = ViewBag.SucursalId as int?;
    var sucursales = ViewData["Sucursales"] as SelectList;
}

<h1>
    @if (sucursalId.HasValue)
    {
        @:Inventario de sucursal
    }
    else
    {
        @:Inventario
    }
</h1>

@if (sucursalId.HasValue)
{
    <p>
        <a asp-action="Create"
           asp-route-sucursalId="@sucursalId"
           class="btn btn-success">
            Agregar producto a esta sucursal
        </a>
    </p>
}

<form asp-action="Index" method="get" class="row mb-3">
    <div class="col-md-4">
        <label for="sucursalId" class="form-label">Sucursal</label>
        <select id="sucursalId" name="sucursalId" class="form-select" asp-items="sucursales">
            <option value="">-- Todas --</option>
        </select>
    </div>
    <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-outline-secondary">Filtrar</button>
    </div>
</form>

@if (!Model.Any())
{
    <p class="text-muted">No hay productos cargados en el inventario.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                @if (!sucursalId.HasValue)
                {
                    <th>Sucursal</th>
                }
                <th>Producto</th>
                <th>Cantidad</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (!sucursalId.HasValue)
                    {
                        <td>@item.Sucursal?.Nombre</td>
                    }
                    <td>@item.Producto?.Descripcion</td>
                    <td>@item.Cantidad</td>
                    <td class="text-end">
                        @if (User.IsInRole(Configs.ADMIN_ROLE) || User.IsInRole(Configs.EMPLEADO_ROLE))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-outline-primary btn-sm">Editar</a>

                            <a asp-action="SumarStock"
                               asp-route-id="@item.Id"
                               asp-route-sucursalId="@(sucursalId)"
                               class="btn btn-primary btn-sm">Agregar stock</a>
                        }

                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-secondary btn-sm">Detalles</a>

                        @if (User.IsInRole(Configs.ADMIN_ROLE))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-danger btn-sm">Eliminar</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
